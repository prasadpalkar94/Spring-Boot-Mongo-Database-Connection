<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bundle</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <excludes>
                <exclude>start.sh</exclude>
                <exclude>stop.sh</exclude>
                <exclude>assembly.xml</exclude>
                <exclude>springmongo.json</exclude>
                <exclude>redeploy.sh</exclude>
            </excludes>
            <outputDirectory>springmongo/conf/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <includes>
                <include>start.sh</include>
                <include>stop.sh</include>
                <include>redeploy.sh</include>
            </includes>
            <outputDirectory>springmongo/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/build/springmongo/lib</directory>
            <outputDirectory>springmongo/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/build/springmongo/</directory>
            <outputDirectory>springmongo/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
            <outputDirectory>springmongo/logs</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
